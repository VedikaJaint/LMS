@model IEnumerable<LMS.Models.LendRequest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
.flex-container {
  display: flex;
  flex-direction: column;
  height:100%;
}

.flex-container > div {
  border:2px solid black;
  width: 100%;
  margin: 10px;
  text-align: center;
  line-height: 75px;
  font-size: 30px;
}
ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
}

li {
  float: right;
}

li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  
}

li a:hover {
  background-color: #111;
}
.logo{
    color:white;
    margin-left:10px;
    float:left;
}
.tbl{
    width:100%;
    border: 2px solid black;
    margin:10px;
    display:flex;

}
.content{
    padding-bottom: 20px;
}

table {
  border-collapse: collapse;
  width: 100%;
  border: 1px solid #ddd;
  padding-bottom: 30px;
}

th, td {
  text-align: left;
  padding: 16px;
  text-align: center;
}
th{
    background-color: #333;
    color: white;
    text-align: center;
  padding: 14px 16px;
}

</style>

  <div> <h2>Welcome Admin</h2></div>
  <table>
   <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LendId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LendStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.LendStatus.Equals("Requested"))
            {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.LendId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.BookTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LendStatus)
                </td>
                <td>
                    <form asp-controller="Admin" asp-action="requestApproved" asp-route-lendId=@item.LendId>
                        <input style="width: 65px" type="submit" value="Approve" />
                    </form>
                    <form asp-controller="Admin" asp-action="requestDeclined" asp-route-lendId=@item.LendId>
                        <input style="width: 65px;margin-top:5px" type="submit" value="Decline" />
                    </form>
                </td>
            </tr>}
        }
    </tbody>


   
  </table>






